<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CinemaActivity2">

    <TextView
        android:id="@+id/cinematext"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="CINEMA HALLS"
        android:textAlignment="center"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/pvrcinema2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cinematext"
        app:srcCompat="@drawable/pvrimage" />

    <ImageView
        android:id="@+id/inoxcinema2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/inoximage" />

</RelativeLayout>