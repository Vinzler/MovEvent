<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PVRActivity4"
    android:background="@drawable/androidback">

    <ImageView
        android:id="@+id/seatj8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/seati8"
        android:layout_toStartOf="@+id/seath8" />

    <ImageView
        android:id="@+id/seati8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_above="@+id/screentext8"
        android:layout_toStartOf="@+id/seatg8" />

    <ImageView
        android:id="@+id/seath8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/confirmbutton8"
        android:layout_alignTop="@+id/seatf8" />

    <ImageView
        android:id="@+id/seatg8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/seatf8"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/seatf8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/seata8"
        android:layout_marginBottom="143dp" />

    <ImageView
        android:id="@+id/seate8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/seatd8"
        android:layout_toStartOf="@+id/confirmbutton8" />

    <ImageView
        android:id="@+id/seatd8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
        android:layout_toEndOf="@+id/backbutton8" />

    <ImageView
        android:id="@+id/seatb8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/seatc8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/silvertext8"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:text="SILVER(Rs100/seat)"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/backbutton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="23dp"
        android:text="BACK" />

    <Button
        android:id="@+id/confirmbutton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/backbutton8"
        android:layout_marginEnd="21dp"
        android:text="CONFIRM" />

    <TextView
        android:id="@+id/goldtext8"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_below="@+id/backbutton8"
        android:layout_centerHorizontal="true"
        android:text="GOLD(Rs200/seat)"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/screentext8"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SCREEN"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/seatc8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seata8"
        android:layout_marginEnd="43dp" />

    <ImageView
        android:id="@+id/seata8"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="121dp" />



</RelativeLayout>